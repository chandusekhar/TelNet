@model TelNet.ViewModels.DobavljacKomentar


@{
    ViewBag.Title = "Edit";
}
<div class="services">
    <div class="container">
        <div class="text-center">
            <h2>Izmjena ratinga dobavljača @Html.DisplayFor(model => model.dobavljac.naziv)</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.dobavljac.dobavljacID)
                    @Html.HiddenFor(model => model.dobavljac.naziv)
                    @Html.HiddenFor(model => model.dobavljac.adresa)



                    <div class="form-group">
                        @Html.Label("Rating kvaliteta", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.dobavljac.ratingKvalitet, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dobavljac.ratingKvalitet, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Rating brzine isporuke", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.dobavljac.ratingBrzinaIsporuke, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dobavljac.ratingBrzinaIsporuke, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Rating komunikacije", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.dobavljac.ratingKomunikacija, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.dobavljac.ratingKomunikacija, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.Label("Komentar izmjene", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.komentar, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.komentar, "", new { @class = "text-danger" })
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Sačuvaj" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Vrati se nazad", "Index")
            </div>

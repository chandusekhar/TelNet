@model TelNet.ViewModels.PaketViewModel

@{
    ViewBag.Title = "Paketi";
}

<div class="services">
    <div class="container">
      
        <div class="text-center">

            <h2>Paketi usluga</h2>

            @if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("Employee"))
            {
                <p>
                    @Html.ActionLink("Kreiraj novi paket", "Create")
                </p>
            }

            @foreach (var item in Model.Paketi)
            {
                var delay = item.paketID;
                var d = delay * 200;
                var dd = d.ToString();
                <div class="col-md-3 wow fadeInDown" data-wow-duration="1000ms" data-wow-delay=" @(dd + "ms") ">

                    @if (delay != 0 && delay % 4 == 0)
                    {
                        <i class="fa fa-heart-o"></i>
                    }
                    else if (delay != 0 && delay % 3 == 0)
                    {
                        <i class="fa fa-gear"></i>
                    }
                    else if (delay != 0 && delay % 2 == 0)
                    {
                        <i class="fa fa-cloud"></i>
                    }
                    else
                    {
                        <i class="fa fa-book"></i>
                    }
                    <h3>
                        @Html.DisplayFor(modelItem => item.nazivPaketa)
                        </h3>
                        <br>
                      @Html.Label("Cijena:", new {style = "color:gray;" }) @Html.DisplayFor(modelItem => item.cijenaPaketa)
                        <br>
                      @Html.Label("Opis:", new { style = "color:gray;" }) @Html.DisplayFor(modelItem => item.opis)
                        <br>
                    @Html.Label("Usluge u sklopu paketa:", new { style = "color:gray;" }) <br >
                        @{
                            foreach (var usluga in item.Usluge)
                            {
                                @:  @usluga.nazivUsluge <br >
                                }
                        }


@if (ViewContext.HttpContext.User.IsInRole("Admin") || ViewContext.HttpContext.User.IsInRole("Employee"))
{
                        @Html.ActionLink("Izmjena", "Edit", new { id = item.paketID })    <br>
                        @Html.ActionLink("Brisanje", "Delete", new { id = item.paketID })
                    }

</div>
                        }
            </div>
        </div>



</div>
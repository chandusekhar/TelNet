@model telNet.Models.paket

@{
    ViewBag.Title = "Delete";
}

<div class="services">
    <div class="container">
        <h2>Brisanje</h2>

        <h3>Da li ste sigurni da želite izbrisati ovaj paket?</h3>
        <div>
            <h4>paket</h4>
            <hr />
            <dl class="dl-horizontal">

                <dt>
                    @Html.DisplayName("Naziv paketa")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.nazivPaketa)
                </dd>

                <dt>
                    @Html.DisplayName("Cijena paketa")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.cijenaPaketa)
                </dd>

                <dt>
                    @Html.DisplayName("Opis")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.opis)
                </dd>

            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Izbriši" class="btn btn-default" /> |
                    @Html.ActionLink("Vrati se nazad", "Index")
                </div>
            }
        </div>
</div>
</div>
@model telNet.Models.usluga

@{
    ViewBag.Title = "Brisanje usluge";
}

<div class="services">
    <div class="container">
        <div class="text-center">
                <h2>Brisanje</h2>

                <h3>Jeste li sigurni da želite izbrisati uslugu?</h3>
                <div>
                     <hr />
                    <dl class="dl-horizontal">


                        <dt>
                            @Html.DisplayName("Naziv usluge")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.nazivUsluge)
                        </dd>

                        <dt>
                            @Html.DisplayName("Tip usluge")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tipUsluge)
                        </dd>

                        <dt>
                            @Html.DisplayName("Cijena usluge")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.cijenaUsluge)
                        </dd>

                        <dt>
                            @Html.DisplayName("Opis")
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.opis)
                        </dd>

                    </dl>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <input type="submit" value="Izbriši" class="btn btn-default" /> |
                            @Html.ActionLink("Vrati se nazad", "Index")
                        </div>
                    }
                </div>
            </div>
        </div>
</div>
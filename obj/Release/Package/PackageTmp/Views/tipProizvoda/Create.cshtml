@model telNet.Models.tipProizvoda

@{
    ViewBag.Title = "Create";
}

<div class="services">
    <div class="container">
        <div class="text-center">
            <h2>Unos novog tipa proizvoda</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.Label("Naziv tipa proizvoda", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.nazivTipa, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.nazivTipa, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Proizvođač", htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.proizvodjac, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.proizvodjac, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-10">
                            <input type="submit" value="Sačuvaj" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div  class="col-md-10">
                @Html.ActionLink("Vrati se nazad", "Index")
            </div>


            </div></div></div>
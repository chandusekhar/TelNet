@model IEnumerable<telNet.Models.tipProizvoda>

@{
    ViewBag.Title = "Index";
}
<div class="services">
    <div class="container">
        <div class="text-center">


            <h2>Tipovi proizvoda</h2>
            <p>
                @Html.ActionLink("Unesi novi tip proizvoda", "Create")
            </p>
        </div>
 <table class="table">
                <tr>
                    <th>
                        Naziv tipa proizvoda
                    </th>
                    <th>
                        Proizvođač
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.nazivTipa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.proizvodjac)
                        </td>
                        <td>
                            @Html.ActionLink("Izmjena", "Edit", new { id = item.tipProizvodaID }) |
                            @Html.ActionLink("Brisanje", "Delete", new { id = item.tipProizvodaID })
                        </td>
                    </tr>
                }

            </table>
</div>
</div>
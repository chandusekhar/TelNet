@model IEnumerable<TelNet.Models.Proizvod>

@{
    ViewBag.Title = "Proizvodi";
}

<div class="services">
    <div class="container">
        <div class="text-center">
            <h3>Proizvodi</h3>
            <p>
                @Html.ActionLink("Unesi novi proizvod", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        Naziv dobavljača
                    </th>
                    <th>
                        Tip proizvoda
                    </th>
                    <th>
                        Cijena proizvoda
                    </th>
                    <th>
                        Opis proizvoda
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Dobavljac.naziv)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TipProizvoda.nazivTipa)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.cijenaProizvoda)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.opisProizvoda)
                        </td>
                        <td>
                            @Html.ActionLink("Izmjena", "Edit", new { id = item.proizvodID }) |
                            @Html.ActionLink("Brisanje", "Delete", new { id = item.proizvodID })
                        </td>
                    </tr>
                }

            </table>
</div>
</div>
</div>
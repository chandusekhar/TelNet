@{
    ViewBag.Title = "Home Page";
}

<div class="slider">
    <div id="about-slider">
        <div id="carousel-slider" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators visible-xs">
                <li data-target="#carousel-slider" data-slide-to="0" class="active"></li>
                <li data-target="#carousel-slider" data-slide-to="1"></li>
                <li data-target="#carousel-slider" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner">
                <div class="item active">
                    <img src="img/slide.jpg" class="img-responsive" alt="">
                    <div class="carousel-caption">
                        <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.3s">
                            <h2><span>
                                TV Kanali</span></h2>
                        </div>
                        <div class="col-md-10 col-md-offset-1">
                            <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.6s">
                                <p>Doživite najbolje iskustvo digitalne televizije.</p>
                            </div>
                        </div>
                        <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.9s">
                            <form class="form-inline">
                                <div class="form-group">
                                    <button type="naseusluge" name="Naše usluge" class="btn btn-primary btn-lg" required="required">@Html.ActionLink("Naše usluge", "Index", "usluge")</button>
                                </div>
                                <div class="form-group">
                                    <button type="kontakt" name="Kontakt" class="btn btn-primary btn-lg" required="required">@Html.ActionLink("Kontakt", "Contact", "Home")</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="item">
                    <img src="img/pexels.jpg" class="img-responsive" alt="">
                    <div class="carousel-caption">
                        <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="1.0s">
                            <h2>Velike brzine interneta</h2>
                        </div>
                        <div class="col-md-10 col-md-offset-1">
                            <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.6s">
                                <p>UZMITE INTERNET 4 PUTA BRŽI OD PROSJEKA</p>
                            </div>
                        </div>
                        <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="1.6s">
                            <form class="form-inline">
                                <div class="form-group">
                                    <button type="naseusluge" class="btn btn-primary btn-lg" required="required"> @Html.ActionLink("Naše usluge", "Index", "usluge")</button>
                                </div>
                                <div class="form-group">
                                    <button type="kontakt" name="subscribe" class="btn btn-primary btn-lg" required="required">@Html.ActionLink("Kontakt", "Contact", "Home")</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <img src="img/slide.jpg" class="img-responsive" alt="">
                    <div class="carousel-caption">
                        <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.3s">
                            <h2>Razni paketi usluga</h2>
                        </div>
                        <div class="col-md-10 col-md-offset-1">
                            <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.6s">
                                <p>Izaberite savrsen paket usluga za Vas dom!</p>
                            </div>
                        </div>
                        <div class="wow fadeInUp" data-wow-offset="0" data-wow-delay="0.9s">
                            <form class="form-inline">
                                <div class="form-group">
                                    <button type="naseusluge" name="usluge" class="btn btn-primary btn-lg" required="required">Nase Usluge</button>
                                </div>
                                <div class="form-group">
                                    <button type="kontakt" name="subscribe" class="btn btn-primary btn-lg" required="required">Kontakt</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <a class="left carousel-control hidden-xs" href="#carousel-slider" data-slide="prev">
                <i class="fa fa-angle-left"></i>
            </a>

            <a class=" right carousel-control hidden-xs"href="#carousel-slider" data-slide="next">
                <i class="fa fa-angle-right"></i>
            </a>
        </div> <!--/#carousel-slider-->
    </div><!--/#about-slider-->
</div><!--/#slider-->

<div class="about">
    <div class="container">
        <div class="text-center">
            <h2>KORISNIČKI SERVIS</h2>
            <div class="col-md-10 col-md-offset-1">
                <p>
                    Pitajte, saznajte, razgovarajte i informišite se o svim Telemach uslugama. Naš korisnički servis dostupan je 365 dana u godini.   </p>
            </div>

            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="btn-gamp"><a @Html.ActionLink("Saznaj više", "Contact", "Home")></a></div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="gamp-btn"><a @Html.ActionLink("Naše usluge", "Index", "usluge")></a></div>
            </div>

        </div>
    </div>
</div>
<hr>

